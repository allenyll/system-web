<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sw.base.mapper.goods.ColorMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.sw.common.entity.goods.Color" id="colorMap">
        <result property="pkColorId" column="pk_color_id"/>
        <result property="fkColorGroupId" column="fk_color_group_id"/>
        <result property="colorName" column="color_name"/>
        <result property="colorCode" column="color_code"/>
        <result property="colorAsc" column="color_asc"/>
        <result property="isUsed" column="is_used"/>
        <result property="isDefault" column="is_default"/>
        <result property="isDelete" column="is_delete"/>
        <result property="addUser" column="add_user"/>
        <result property="addTime" column="add_time"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        pk_color_id
        fk_color_group_id
        color_name
        color_code
        color_asc
        is_used
        is_default
        is_delete
        add_user
        add_time
        update_user
        update_time
    </sql>

</mapper>